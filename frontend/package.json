{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "name": "frontend",
  "version": "1.0.0",
  "description": "Pong Frontend",
  "main": "public/index.html",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/styles.css",
    "build:ts": "tsc",
    "build": "npm run build:css && npm run build:ts",
    "watch:css": "tailwindcss -i src/styles/input.css -o public/styles.css --watch",
    "watch:ts": "tsc --watch",
    "serve": "npx http-server public -p 8080",
    "dev": "npm run watch:css & npm run watch:ts & npm run serve"
  },
  "author": "",
  "license": "ISC"
}
